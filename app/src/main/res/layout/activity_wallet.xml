                android:layout_width="@dimen/one_hundred_dp"
                android:layout_height="@dimen/fourty_dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/frame_23"
                android:gravity="center"
                android:text="Approved"
                android:textAppearance="@style/add_money"
                android:backgroundTint="@color/ic_launcher_background"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/my_payment_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/twenty_five_dp"
                android:layout_marginTop="@dimen/five_dp"
                android:gravity="top"
                android:text="My payment"
                android:textAppearance="@style/my_payment_" />

