<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_30dp"
                android:src="@drawable/close"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_30dp">

            </ImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30dp"
                android:layout_marginRight="@dimen/_30dp"
                android:text="Waiting"
                android:textAppearance="@style/welcome_bac"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30dp"
                android:layout_marginRight="@dimen/_25dp"
                android:text="Please wait till 12,Aug to tranfer your \n amount"
                android:textAppearance="@style/or"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15dp"/>

            <TextView
                android:id="@+id/text_withdraw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginLeft="@dimen/_3dp"
                android:layout_marginRight="@dimen/_30dp"
                android:background="@drawable/rectangle_3"
                android:text="Withdraw amount"
                android:gravity="center"
                android:textSize="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_20dp"
                />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>