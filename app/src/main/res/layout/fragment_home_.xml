<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aimplatfarm.aimplatfarmdelivery.Fragments.Home_Fragment">

    <LinearLayout
        android:id="@+id/ll_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:id="@+id/home_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/fifteen_dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/five_dp"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:background="@drawable/ractangle_with_shadow"
                    android:elevation="7dp"
                    android:translationZ="4dp">

                    <TextView
                        android:id="@+id/tv_hello"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/twenty_five_dp"
                        android:layout_marginTop="@dimen/twelve_dp"
                        android:layout_toRightOf="@+id/profile_image"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="Hello,"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/eighteen_sp" />

                    <TextView
                        android:id="@+id/tv_driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_hello"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/twenty_five_dp"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_marginBottom="@dimen/twelve_dp"
                        android:layout_toRightOf="@+id/profile_image"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="Rohit Sharma"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/eighteen_sp" />


                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/twelve_dp"
                        android:src="@drawable/ic_launcherplaystore"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="1dp" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_on_off"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/profile_image"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/twelve_dp"
                        android:src="@color/k_green"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="2dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen_dp">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="@dimen/one_hundred_dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/input_backgrond"
                        android:backgroundTint="@color/light_blue"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/ten_dp"
                        android:paddingEnd="@dimen/ten_dp">

                        <TextView
                            android:id="@+id/tv_total_earning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/white"
                            android:textSize="@dimen/twenty_five_dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/five_dp"
                            android:text="Total Earning"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteen_sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_arrow_right_long" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="@dimen/one_hundred_dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/input_backgrond"
                        android:backgroundTint="@color/k_orange"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/ten_dp"
                        android:paddingEnd="@dimen/ten_dp">

                        <TextView
                            android:id="@+id/tv_total_shipment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/white"
                            android:textSize="@dimen/twenty_five_dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/five_dp"
                            android:text="Total Shipment"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteen_sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_arrow_right_long" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen_dp">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="@dimen/one_hundred_dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/input_backgrond"
                        android:backgroundTint="@color/k_purpal"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/ten_dp"
                        android:paddingEnd="@dimen/ten_dp">
                        <TextView
                            android:id="@+id/tv_total_pickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/white"
                            android:textSize="@dimen/twenty_five_dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/five_dp"
                            android:text="Total Pickup"
                            android:textColor="@color/white"

                            android:textSize="@dimen/fourteen_sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_arrow_right_long" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="@dimen/one_hundred_dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/input_backgrond"
                        android:backgroundTint="@color/k_green"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/ten_dp"
                        android:paddingEnd="@dimen/ten_dp">

                        <TextView
                            android:id="@+id/tv_total_success"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:fontFamily="@font/poppins_regular"
                            android:singleLine="true"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/white"
                            android:textSize="@dimen/twenty_five_dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/five_dp"
                            android:text="Total Successful Req"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteen_sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_arrow_right_long" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty_eight_dp"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:background="@drawable/input_backgrond"
                    android:backgroundTint="@color/k_red">

                    <TextView
                        android:id="@+id/tv_total_declined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/thirty_four_dp"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_toLeftOf="@+id/ll_decl"
                        android:fontFamily="@font/poppins_regular"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/twenty_five_dp" />

                    <LinearLayout
                        android:id="@+id/ll_decl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/thirty_dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Decline Request"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteen_sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_arrow_right_long" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_accept_requests_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:background="@drawable/white_rounded_corner_thin_border">

                    <TextView
                        android:id="@+id/tv_accept_requests_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_marginLeft="@dimen/thirty_four_dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:layout_marginRight="@dimen/ten_dp"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:drawableRight="@drawable/enter_icon"
                        android:drawablePadding="@dimen/ten_dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Accept Order List"
                        android:textColor="@color/black"
                        android:textSize="@dimen/eighteen_sp" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pickup_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/fifteen_dp"
                android:visibility="gone"
                android:paddingRight="@dimen/fifteen_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_hello"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/twelve_dp"
                    android:layout_toRightOf="@+id/profile_image"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="Pickup Request"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty_dp" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/orderslist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_marginRight="@dimen/five_dp"
                android:nestedScrollingEnabled="true" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>