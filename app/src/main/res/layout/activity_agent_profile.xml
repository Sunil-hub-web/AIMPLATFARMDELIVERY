<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aimplatfarm.aimplatfarmdelivery.Activities.AgentProfileActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:clipToPadding="false"
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_blue"
                android:minHeight="@dimen/one_fifty_dp">


                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_width="@dimen/ninety_dp"
                    android:layout_height="@dimen/ninety_dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/twenty_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginEnd="@dimen/twenty_dp"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:src="@drawable/ic_launcherplaystore" />


                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/profileImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="@dimen/twenty_sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_marginTop="@dimen/ten_dp"
                        android:padding="@dimen/five_dp"
                        android:background="@drawable/rounded_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/sixteen_sp"
                        android:text="User Type - Delivery"
                        android:textColor="@color/blue_primary"/>
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:onClick="logout"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/ten_dp"
                android:layout_marginTop="-25dp"
                android:elevation="@dimen/ten_dp"
                android:layout_width="@dimen/fifty_dp"
                android:layout_height="@dimen/fifty_dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_exit_to_app_24"
                android:background="@drawable/circle_image"/>

            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ten_dp">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Details"/>

            </com.google.android.material.tabs.TabLayout>

            <LinearLayout
                android:padding="@dimen/ten_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/vendorHolder">

                <TextView
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/eighteen_sp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="@color/light_blue"
                    android:text="Personal Info"/>
                <TextView
                    android:id="@+id/name2Tv"
                    android:layout_marginStart="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sixteen_sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/phoneTv"
                    android:layout_marginStart="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sixteen_sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/emailTv"
                    android:layout_marginStart="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sixteen_sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/eighteen_sp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="@color/light_blue"
                    android:text="Account Details"/>
                <TextView
                    android:id="@+id/bankTv"
                    android:layout_marginStart="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sixteen_sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/accountNumTv"
                    android:layout_marginStart="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sixteen_sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/ifscTv"
                    android:layout_marginStart="@dimen/five_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sixteen_sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/eighteen_sp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="@color/light_blue"
                    android:text="Location Details"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginStart="@dimen/five_dp"
                            android:layout_marginBottom="@dimen/five_dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sixteen_sp"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textColor="@color/black"
                            android:text="State"/>

                        <TextView
                            android:id="@+id/stateTv"
                            android:layout_marginStart="@dimen/five_dp"
                            android:layout_marginBottom="@dimen/five_dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sixteen_sp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginStart="@dimen/five_dp"
                            android:layout_marginBottom="@dimen/five_dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sixteen_sp"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textColor="@color/black"
                            android:text="City"/>

                        <TextView
                            android:id="@+id/cityTv"
                            android:layout_marginStart="@dimen/five_dp"
                            android:layout_marginBottom="@dimen/five_dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sixteen_sp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginStart="@dimen/five_dp"
                            android:layout_marginBottom="@dimen/five_dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sixteen_sp"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textColor="@color/black"
                            android:text="Address"/>

                        <TextView
                            android:id="@+id/streetTv"
                            android:layout_marginStart="@dimen/five_dp"
                            android:layout_marginBottom="@dimen/five_dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sixteen_sp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginStart="@dimen/five_dp"
                            android:layout_marginBottom="@dimen/five_dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sixteen_sp"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textColor="@color/black"
                            android:text="zip"/>

                        <TextView
                            android:id="@+id/zipTv"
                            android:layout_marginStart="@dimen/five_dp"
                            android:layout_marginBottom="@dimen/five_dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sixteen_sp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>